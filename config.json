{
  "max_open_trades": 15,
  "stake_currency": "USDT",
  "stake_amount": 20,
  "tradable_balance_ratio": 1.0,

  "dry_run": false,
  "dry_run_wallet": 3000,

  "exchange": {
    "name": "binance",
    "key": "API_KEY",
    "secret": "API_SECRET",
    "ccxt_config": {
      "enableRateLimit": true
    },
    "ccxt_async_config": {
      "enableRateLimit": true
    },
    "pair_whitelist": [
      "SOL/USDT:USDT",
      "ADA/USDT:USDT",
      "AVAX/USDT:USDT",
      "DOGE/USDT:USDT",
      "HYPE/USDT:USDT",
      "XRP/USDT:USDT",
      "ENA/USDT:USDT",
      "ARB/USDT:USDT",
      "APT/USDT:USDT",
      "LDO/USDT:USDT",
      "OP/USDT:USDT",
      "PUMP/USDT:USDT",
      "SUI/USDT:USDT",
      "LINK/USDT:USDT",
      "VIRTUALS/USDT:USDT",
      "FARTCOIN/USDT:USDT",
      "JUP/USDT:USDT",
      "AAVE/USDT:USDT",
      "ONDO/USDT:USDT",
      "EIGEN/USDT:USDT",
      "BIO/USDT:USDT",
      "DOT/USDT:USDT",
      "ETH/USDT:USDT",
      "BTC/USDT:USDT"
    ],
    "futures": {
      "leverage": 3,
      "position_mode": "HEDGE"   
    }
  },

  "pairlists": [
    {
      "method": "StaticPairList"
    }
  ],

  "timeframe": "5m",
  "strategy": "NfiSuperTrendStrategy", 
  "strategy_path": "user_data/strategies",

  "entry_pricing": {
    "price_side": "bid",
    "use_order_book": true,
    "order_book_top": 1,
    "price_last_balance": 0.0,
    "check_depth_of_market": {
      "enabled": false
    }
  },

  "exit_pricing": {
    "price_side": "ask",
    "use_order_book": true,
    "order_book_top": 1
  },

  "telegram": {
    "enabled": false
  },

  "api_server": {
    "enabled": true,
    "listen_ip_address": "0.0.0.0",
    "listen_port": 8081,
    "verbosity": "info",
    "jwt_secret_key": "token",
    "CORS_origins": ["*"],
    "username": "admin",
    "password": "123456"
  },

  "bot_name": "nfi_supertrend_3x_auto",
  "initial_state": "running",
  "force_entry_enable": true,
  "internals": {
    "process_throttle_secs": 5
  }
}
